{
  "name": "happy-work",
  "displayName": "HappyWork",
  "icon": "public/images/Easier.png",
  "description": "",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.58.1"
  },
  "publisher": "renhaohao",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/renhh/happy-work.git"
  },
  "contributes": {
    "commands": [
      {
        "command": "Easier.createBranchAndMergeRequest",
        "title": "Create branch and merge request"
      },
      {
        "command": "Easier.generateWeeklyReport",
        "title": "Generate weekly report"
      },
      {
        "command": "Easier.updateCsvFile",
        "title": "Update csv file"
      }
    ],
    "configuration": {
      "type": "object",
      "properties": {
        "Easier.settings.jiraHost": {
          "type": "string",
          "default": "",
          "description": ""
        },
        "Easier.settings.gitlabHost": {
          "type": "string",
          "default": "",
          "description": ""
        },
        "Easier.settings.jiraUserPersonalAccessToken": {
          "type": "string",
          "default": "",
          "description": ""
        },
        "Easier.settings.gitlabUserPersonalAccessToken": {
          "type": "string",
          "default": "",
          "description": ""
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vsce-package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.58.1",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "ts-loader": "^9.4.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "@vscode/test-electron": "^2.3.2"
  },
  "dependencies": {
    "@gitbeaker/node": "35.8.1",
    "exceljs": "4.3.0",
    "jira.js": "2.19.0",
    "moment": "2.29.4",
    "simple-git": "3.19.0",
    "csv-parser": "3.0.0"
  }
}
